# Google Translate API
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# Admin credentials
ADMIN_PASSWORD=change_this_secure_password

# Database
POSTGRES_USER=lancaster
POSTGRES_PASSWORD=change_this_db_password
POSTGRES_DB=lancaster_community

# Application settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,de,fr,zh,ar,he,fa,ur
RTL_LANGUAGES=ar,he,fa,ur

# Production settings (for docker-compose.prod.yml)
DOMAIN=your-domain.com

# Note: When deploying, these values should be set as GitHub Secrets:
# - GOOGLE_TRANSLATE_API_KEY
# - ADMIN_PASSWORD
# - POSTGRES_USER
# - POSTGRES_PASSWORD
# - POSTGRES_DB
# - DOMAIN